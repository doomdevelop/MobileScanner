<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:gravity="bottom">
 
   
       <FrameLayout
         android:id="@+id/frameLayout"
	         	android:orientation="vertical"
	    		android:gravity="center"
	        	android:layout_width="fill_parent"
	        	android:layout_height="fill_parent"
	         >
 	 <Button
			    	android:id="@+id/crop"
			    	android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="crop to frame"
			    />
	 	 	 	  <CheckBox 
	 	 	 	     android:id="@+id/addFrame"
	 	 	 	     android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="add frames"
	 	 	 	     />
	 	 	 	  <Button
			    	android:id="@+id/frameToWholeImage"
			    	android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="frame to image"
			    />
 	 	 	 <Button
		    	android:id="@+id/backHistory"
		    	android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="last image"
		    />
 	 	 	  <Button
		    	android:id="@+id/runOrgOcr"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
				android:text="run OCR"
		    />
 	 	 	  </FrameLayout>
</LinearLayout>